    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="android:layout_width">20dp</item>
        <!--        <item name="cornerSize">20%</item>-->
        <!--        <item name="cornerSizeTopLeft">50%</item>-->
    </style>

    <style name="SFUIText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@fonts/SFUIText-Regular</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#efefef</item>
    </style>


    <style name="NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="NormalButtonOutLine" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ToolbarColoredBackRed" parent="AppTheme">
        <item name="android:textColorSecondary">@color/da_cam_dark</item>
        <item name="colorControlNormal">@color/da_cam_dark</item>
    </style>

    <style name="ToolbarColoredBackBlack" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/icon_back</item>
        <item name="android:textColorSecondary">@color/icon_back_color</item>
        <item name="colorControlNormal">@color/icon_back_color</item>
        <item name="actionBarSize">@dimen/toolbar_size</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="InputLayoutHintText" parent="AppTheme">
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textSize">@dimen/text_tiny_size</item>
        <item name="colorControlActivated">@color/gray2</item>
        <item name="colorControlHighlight">@color/gray2</item>
    </style>

    <style name="StyleChooseDialog" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">1px</item>
        <item name="boxBackgroundColor">@color/background_edit_text</item>
        <item name="android:radius">12dp</item>
        <item name="hintEnabled">true</item>
        <item name="android:layout_height">50dp</item>
        <item name="boxStrokeWidthFocused">1px</item>
        <item name="android:textSize">12sp</item>
    </style>

