    <style name="InputUnderline" parent="AppTheme">
        <item name="colorControlActivated">@color/gray2</item>
        <item name="colorControlHighlight">@color/gray2</item>
    </style>

    <style name="InStyleTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">5dp</item>

    </style>

    <style name="InStyleTextLayout_number" parent="@style/InStyleTextLayout">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:digits">.0123456789</item>

    </style>

    <style name="EditTextOrderItem" parent="@style/InStyleTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textColor">@color/text_color_blue</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorBackgroundFloating">
            @color/white
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">15sp</item>
